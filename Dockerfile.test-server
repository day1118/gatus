FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY test-server.go .
RUN go mod init test-server && \
    go mod tidy && \
    go build -o test-server test-server.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates curl
WORKDIR /root/
COPY --from=builder /app/test-server .
EXPOSE 8080
CMD ["./test-server"]
